<%= render :partial => 'shared/interior_hero' %>
<div id="interior_wrapper">
    <div id="interior_header_absolute">
        <h6 id="int_header">Edit</h6>
    </div>
    
    <div id="interior_sub_head"><h5 id="sub_green_head"></h5></div>
<div id="interior_pad">

<% form_for(@product) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
      <%= f.label :price %><br />
      $<%= f.text_field :price %>
    </p>
    <p>
          <label for="category">Category<br/></label>
            <select name="category">
                <% @cat.each do |category| %> <!-- #do loop,will go on till end of records in table-categories -->
                    <option value="<%= category.id %>">
                <%= category.name  %><!-- #will display all category names -->
                    </option>
              <% end %>
            </select>
        </p>
      <p>
          <label for="brand">Brand:<br/></label>
              <select name="brand">
                  <% @brand.each do |brand| %> <!-- #do loop,will go on till end of records in table-categories -->
                  <option value="<%= brand.id %>">
                  <%= brand.name  %><!-- #will display all brand names -->
                  </option>
                  <% end %>
              </select>
          </p>
    
    <div id="add_photo">
         <p><%= f.label 'Add/Remove Photos:' %><br>
         <% f.attachment_fields_for :photos, :data, :new_objects => 0 do |attachment_fields| %>
     		<%= image_tag(attachment_fields.object.data(:thumb)) unless attachment_fields.object.data.nil? %>

     		<%= attachment_fields.label :data, 'Photo' %>
     		<%= attachment_fields.file_field :data %>
     		<%= attachment_fields.label :front, 'Primary Photo' %>
     		<%= attachment_fields.check_box :front %> |
     		<%= attachment_fields.label :_delete, 'Delete Photo' %>
     		<%= attachment_fields.check_box :_delete  %>
     	<%- end -%>
         </p>
     </div>

   <p>
          <%= f.label :video %><br />
          <%= f.text_area :video %>
   </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @product %> |
<%= link_to 'Back', products_path %>
</div>
</div>
<%= render :partial => 'shared/interior_footer' %>